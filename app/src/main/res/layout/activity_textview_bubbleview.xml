<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lib.app.textview.bubbleview.BubbleTextVew
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello BubbleTextVew"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        app:arrowWidth="8dp"
        app:angle="8dp"
        app:arrowHeight="10dp"
        app:arrowPosition="14dp"
        app:arrowLocation="right"
        app:bubbleColor="#7EC0EE"/>

    <com.lib.app.textview.bubbleview.BubbleImageView
        android:id="@+id/bubble_image"
        android:src="@drawable/girl"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:arrowWidth="10dp"
        app:angle="6dp"
        app:arrowHeight="8dp"
        app:arrowPosition="15dp"
        app:arrowLocation="top" />

    <com.lib.app.textview.bubbleview.BubbleLinearLayout
        android:orientation="horizontal"
        app:arrowWidth="8dp"
        app:angle="4dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="left"
        app:bubbleColor="#7EC0EE"
        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/white"
            android:layout_marginRight="4dp"
            android:text="BubbleLinearLayout Text"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.lib.app.textview.bubbleview.BubbleLinearLayout>
    <com.lib.app.textview.bubbleview.BubbleTextVew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello BubbleTextVew"
        android:padding="10dp"
        android:textColor="@android:color/white"
        app:arrowWidth="8dp"
        app:angle="2dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="bottom"
        app:bubbleColor="#ff4444"/>
</LinearLayout>